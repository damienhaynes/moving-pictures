<?xml version="1.0" encoding="utf-8"?>
<!-- 
This file should contain the list view
-->
<window>
	<controls>
	
		<!-- Movie Details -->		
		<control>
		  <description>Movie Title</description>
		  <type>label</type>
		  <id>0</id>
		  <posX>30</posX>
		  <posY>75</posY>
		  <width>480</width>
		  <font>font18</font>
		  <label>#MovingPictures.SelectedMovie.title</label>
		  <textcolor>ffFFFFFF</textcolor>
			<shadowAngle>45</shadowAngle>
      <shadowDistance>4</shadowDistance>
      <shadowColor>#shadow.light</shadowColor>
		  <visible>[facadeview.smallicons|facadeview.largeicons]+control.isvisible(50)</visible>
		</control>				
		
		<!-- Star Rating -->		
		<control>
		  <type>image</type>
		  <id>1001</id>
		  <posX>540</posX>
		  <posY>75</posY>		  
		  <width>115</width>
		  <height>22</height>		 
		  <align>right</align>		  
		  <texture>star#MovingPictures.SelectedMovie.score.rounded.png</texture>
		  <visible>[facadeview.smallicons|facadeview.largeicons]+control.isvisible(50)</visible>
		</control>		
		
	</controls>
</window>