<?xml version="1.0" encoding="utf-8"?>
<!-- 
This file should contain the thumbs view
-->
<window>
  <controls>    
    <!-- Movie Details -->
    <control>
      <description>Movie Title</description>
      <type>label</type>
      <id>0</id>
      <posX>20</posX>
      <posY>230</posY>
      <width>500</width>
      <font>font14</font>
      <label>#MovingPictures.SelectedMovie.title</label>
      <textcolor>ffFFFFFF</textcolor>
			<shadowAngle>45</shadowAngle>
      <shadowDistance>4</shadowDistance>
      <shadowColor>#shadow.light</shadowColor>
      <visible>[facadeview.smallicons|facadeview.largeicons]+control.isvisible(50)</visible>
      <animation effect="fade" time="250" delay="0">WindowClose</animation>
    </control>
    <control>
      <description>Genres</description>
      <type>label</type>
      <label>#MovingPictures.SelectedMovie.genres</label>
      <id>0</id>
      <posX>20</posX>
      <posY>258</posY>
      <width>500</width>
      <font>font12</font>
      <textcolor>ffa9d0f7</textcolor>
			<shadowAngle>45</shadowAngle>
			<shadowDistance>3</shadowDistance>
      <shadowColor>#shadow.dark</shadowColor>
      <visible>[facadeview.smallicons|facadeview.largeicons]+control.isvisible(50)</visible>
      <animation effect="fade" time="250" delay="0">WindowClose</animation>
    </control>
    <!-- Star Rating -->
    <control>
      <type>image</type>
      <id>1001</id>
      <posX>20</posX>
      <posY>289</posY>
      <width>115</width>
      <height>22</height>
      <align>left</align>
      <texture>star#MovingPictures.SelectedMovie.score.rounded.png</texture>
      <visible>[facadeview.smallicons|facadeview.largeicons]+control.isvisible(50)+!string.equals(#MovingPictures.SelectedMovie.score.rounded,)</visible>
      <animation effect="fade" time="250" delay="0">WindowClose</animation>
    </control>
    <control>
      <type>label</type>
      <label>#MovingPictures.SelectedMovie.score.localized / 10</label>
      <posX>150</posX>
      <posY>288</posY>
      <width>360</width>
      <font>font10</font>
			<textcolor>ffFFFFFF</textcolor>
			<shadowAngle>45</shadowAngle>
      <shadowDistance>2</shadowDistance>
      <shadowColor>#shadow.light</shadowColor>
      <visible>[facadeview.smallicons|facadeview.largeicons]+control.isvisible(50)+!string.equals(#MovingPictures.SelectedMovie.score.rounded,)</visible>
      <animation effect="fade" time="250" delay="0">WindowClose</animation>
    </control>
    <control>
      <description>Summary</description>
      <type>textboxscrollup</type>
      <id>0</id>
      <posX>20</posX>
      <posY>320</posY>
      <width>500</width>
      <height>210</height>
      <textcolor>ffFFFFFF</textcolor>
      <seperator>-----------------------------------------------------------------------------------</seperator>
      <font>font11</font>
      <label>#MovingPictures.SelectedMovie.summary</label>
      <visible>[facadeview.smallicons|facadeview.largeicons]+control.isvisible(50)</visible>
      <animation effect="fade" time="250" delay="0">WindowClose</animation>
    </control>    
    <control>
      <description>Certification Label</description>
      <id>0</id>
      <type>label</type>
      <label>#MovingPictures.Translation.Certification.Label</label>
      <posX>20</posX>
      <posY>551</posY>
      <width>140</width>
			<font>font10</font>
			<textcolor>ffa9d0f7</textcolor>
      <visible>[facadeview.smallicons|facadeview.largeicons]+control.isvisible(50)</visible>
      <animation effect="fade" time="250" delay="0">WindowClose</animation>
    </control>
    <control>
      <description>Certification</description>
      <id>1004</id>
      <type>label</type>
      <label>#(iif(neq(#MovingPictures.SelectedMovie.certification,''),#MovingPictures.SelectedMovie.certification,'N/A'))</label>
      <posX>200</posX>
      <posY>552</posY>
      <width>200</width>
			<font>font10</font>
      <visible>[facadeview.smallicons|facadeview.largeicons]+control.isvisible(50)</visible>
      <animation effect="fade" time="250" delay="0">WindowClose</animation>
    </control>    
    <control>
      <description>Runtime Label</description>
      <id>0</id>
      <type>label</type>
      <label>#MovingPictures.Translation.Runtime.Label</label>
      <posX>20</posX>
      <posY>573</posY>
      <width>140</width>
			<font>font10</font>
			<textcolor>ffa9d0f7</textcolor>
      <visible>[facadeview.smallicons|facadeview.largeicons]+control.isvisible(50)</visible>
      <animation effect="fade" time="250" delay="0">WindowClose</animation>
    </control>
    <control>
      <description>Runtime</description>
      <id>1005</id>
      <type>label</type>
      <label>#(iif(neq(#MovingPictures.SelectedMovie.extra.runtime.en.pretty,''),#MovingPictures.SelectedMovie.extra.runtime.en.pretty,'N/A'))</label>
      <posX>200</posX>
      <posY>574</posY>
      <width>250</width>
			<font>font10</font>
      <visible>[facadeview.smallicons|facadeview.largeicons]+control.isvisible(50)</visible>
      <animation effect="fade" time="250" delay="0">WindowClose</animation>
    </control>        
    <control>
      <description>Year Label</description>
      <type>label</type>
      <label>#MovingPictures.Translation.Year.Label</label>
      <posX>20</posX>
      <posY>595</posY>
      <width>140</width>
			<font>font10</font>
			<textcolor>ffa9d0f7</textcolor>
      <visible>[facadeview.smallicons|facadeview.largeicons]+control.isvisible(50)</visible>
      <animation effect="fade" time="250" delay="0">WindowClose</animation>
    </control>
    <control>
      <description>Year</description>
      <id>1006</id>
      <type>label</type>
      <label>#(iif(neq(#MovingPictures.SelectedMovie.year,''),#MovingPictures.SelectedMovie.year,'N/A'))</label>
      <posX>200</posX>
      <posY>596</posY>
			<font>font10</font>
      <visible>[facadeview.smallicons|facadeview.largeicons]+control.isvisible(50)</visible>
      <animation effect="fade" time="250" delay="0">WindowClose</animation>
    </control>    
  </controls>
</window>