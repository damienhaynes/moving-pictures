<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<!--
Contains Music and Video Overlay
not visible in filmstripview, but visible in details view
-->
<window>
  <controls>

    <!--                                    :: DUMMY / BACKGROUND ::                                    -->

    <control>
      <description>dummy (visible when music is playing)</description>
      <type>label</type>
      <id>3337</id>
      <posX>2000</posX>
      <label>#Play.Current.Album</label>
      <visible>player.hasmedia+control.hastext(3337)</visible>
    </control>

    <control>
      <description>dummy (visible when there is a next track)</description>
      <type>label</type>
      <id>3338</id>
      <posX>1800</posX>
      <label>#Play.Next.Title</label>
      <visible>player.hasmedia+control.hastext(3338)</visible>
    </control>

    <control>
      <description>dialog bg</description>
      <type>image</type>
      <id>0</id>
      <posX>0</posX>
      <posY>60</posY>
      <width>512</width>
      <height>152</height>
      <texture>dialogprogressbg.png</texture>
      <visible>player.hasmedia+[!facadeview.filmstrip|!control.isvisible(50)]</visible>
    </control>

    <!--                                    :: MUSIC OVERLAY ::                                    -->

    <control>
      <description>music logo</description>
      <type>image</type>
      <id>0</id>
      <posX>18</posX>
      <posY>78</posY>
      <width>114</width>
      <height>114</height>
      <keepaspectratio>yes</keepaspectratio>
      <centered>yes</centered>
      <zoom>no</zoom>
      <texture>#Play.Current.Thumb</texture>
      <visible>player.hasmedia+[!facadeview.filmstrip|!control.isvisible(50)]+control.isvisible(3337)</visible>
    </control>
    <control>
      <description>artist info label</description>
      <type>fadelabel</type>
      <id>0</id>
      <width>340</width>
      <height>40</height>
      <posX>143</posX>
      <posY>80</posY>
      <label>#Play.Current.Artist</label>
      <textcolor>FFFFFFFF</textcolor>
      <font>font12</font>
      <visible>player.hasmedia+[!facadeview.filmstrip|!control.isvisible(50)]+control.isvisible(3337)</visible>
    </control>
    <control>
      <description>title info label</description>
      <type>fadelabel</type>
      <id>0</id>
      <width>340</width>
      <height>40</height>
      <posX>143</posX>
      <posY>104</posY>
      <label>#Play.Current.Title</label>
      <textcolor>FFFFFFFF</textcolor>
      <font>font10</font>
      <visible>player.hasmedia+[!facadeview.filmstrip|!control.isvisible(50)]+control.isvisible(3337)</visible>
    </control>
    <control>
      <description>album info label</description>
      <type>fadelabel</type>
      <id>0</id>
      <width>340</width>
      <height>40</height>
      <posX>143</posX>
      <posY>123</posY>
      <label>#Play.Current.Album</label>
      <textcolor>FFFFFFFF</textcolor>
      <font>font10</font>
      <visible>player.hasmedia+[!facadeview.filmstrip|!control.isvisible(50)]+control.isvisible(3337)</visible>
    </control>
    <control>
      <description>play time / duration label</description>
      <type>label</type>
      <id>0</id>
      <width>340</width>
      <height>40</height>
      <posX>143</posX>
      <posY>141</posY>
      <label>#currentplaytime / #duration</label>
      <textcolor>FFFFFFFF</textcolor>
      <font>font10</font>
      <visible>player.hasmedia+[!facadeview.filmstrip|!control.isvisible(50)]+control.isvisible(3337)</visible>
    </control>
    <control>
      <description>next song label</description>
      <type>label</type>
      <id>0</id>
      <width>42</width>
      <height>40</height>
      <posX>143</posX>
      <posY>167</posY>
      <label>Next:</label>
      <textcolor>FF025984</textcolor>
      <font>font10</font>
      <visible>player.hasmedia+[!facadeview.filmstrip|!control.isvisible(50)]+control.isvisible(3337)+control.isvisible(3338)</visible>
    </control>
    <control>
      <description>next song info label</description>
      <type>label</type>
      <id>0</id>
      <posX>183</posX>
      <posY>167</posY>
      <width>300</width>
      <height>40</height>
      <label>#Play.Next.Title by #Play.Next.Artist</label>
      <textcolor>FF999999</textcolor>
      <font>font10</font>
      <visible>player.hasmedia+[!facadeview.filmstrip|!control.isvisible(50)]+control.isvisible(3337)+control.isvisible(3338)</visible>
    </control>

    <!--                                    :: VIDEO OVERLAY ::                                    -->

<control>
      <description>video preview window BACKGROUND</description>
      <type>image</type>
      <id>0</id>
      <posX>18</posX>
      <posY>78</posY>
      <width>203</width>
      <height>114</height>
      <texture>-</texture>
      <visible>player.hasmedia+[!facadeview.filmstrip|!control.isvisible(50)]+!control.isvisible(3337)</visible>
    </control>
    <control>
      <description>video preview window</description>
      <type>videowindow</type>
      <id>0</id>
      <posX>18</posX>
      <posY>78</posY>
      <width>203</width>
      <height>114</height>
      <action>18</action>
      <textureFocus>-</textureFocus>
      <visible>player.hasmedia+[!facadeview.filmstrip|!control.isvisible(50)]+!control.isvisible(3337)</visible>
    </control>
    <control>
      <description>artist info label</description>
      <type>fadelabel</type>
      <id>0</id>
      <width>250</width>
      <height>40</height>
      <posX>233</posX>
      <posY>80</posY>
      <label>#Play.Current.Title</label>
      <textcolor>FFFFFFFF</textcolor>
      <font>font10</font>
      <visible>player.hasmedia+[!facadeview.filmstrip|!control.isvisible(50)]+!control.isvisible(3337)</visible>
    </control>
    <control>
      <description>title info label</description>
      <type>fadelabel</type>
      <id>0</id>
      <width>340</width>
      <height>40</height>
      <posX>233</posX>
      <posY>98</posY>
      <label>#Play.Current.Year</label>
      <textcolor>FFFFFFFF</textcolor>
      <font>font10</font>
      <visible>player.hasmedia+[!facadeview.filmstrip|!control.isvisible(50)]+!control.isvisible(3337)</visible>
    </control>
    <control>
      <description>album info label</description>
      <type>fadelabel</type>
      <id>0</id>
      <width>340</width>
      <height>40</height>
      <posX>233</posX>
      <posY>124</posY>
      <label>#Play.Current.Genre</label>
      <textcolor>FFFFFFFF</textcolor>
      <font>font10</font>
      <visible>player.hasmedia+[!facadeview.filmstrip|!control.isvisible(50)]+!control.isvisible(3337)</visible>
    </control>
    <control>
      <description>album info label</description>
      <type>fadelabel</type>
      <id>0</id>
      <width>340</width>
      <height>40</height>
      <posX>233</posX>
      <posY>144</posY>
      <label>#Play.Current.Director</label>
      <textcolor>FFFFFFFF</textcolor>
      <font>font10</font>
      <visible>player.hasmedia+[!facadeview.filmstrip|!control.isvisible(50)]+!control.isvisible(3337)</visible>
    </control>
    <control>
      <description>play time / duration label</description>
      <type>label</type>
      <id>0</id>
      <width>340</width>
      <height>40</height>
      <posX>233</posX>
      <posY>164</posY>
      <label>#currentplaytime / #duration</label>
      <textcolor>FFFFFFFF</textcolor>
      <font>font10</font>
      <visible>player.hasmedia+[!facadeview.filmstrip|!control.isvisible(50)]+!control.isvisible(3337)</visible>
    </control>
  </controls>
</window>