<?xml version="1.0" encoding="utf-8"?>
<!-- 
This file should contain the facade view
-->
<window>
  <controls>
    <control>
      <description>composite control consisting of a list control and a thumbnail panel</description>
      <type>facadeview</type>
      <id>50</id>
      <control>
        <description>Movie List</description>
        <type>listcontrol</type>
        <id>50</id>
        <posX>10</posX>
        <posY>90</posY>
        <width>300</width>
        <height>390</height>
        <onright>5</onright>
        <spinPosX>#spin.xposition</spinPosX>
        <spinPosY>#spin.yposition</spinPosY>
        <spinWidth>#spin.width</spinWidth>
        <spinHeight>#spin.height</spinHeight>
        <spinAlign>left</spinAlign>
        <scrollOffset>1</scrollOffset>
        <textureUp>MovingPictures\page_up_nofocus.png</textureUp>
        <textureDown>MovingPictures\page_down_nofocus.png</textureDown>
        <textureUpFocus>MovingPictures\page_up_focus.png</textureUpFocus>
        <textureDownFocus>MovingPictures\page_down_focus.png</textureDownFocus>
        <textureFocus>MovingPictures\menu_focus.png</textureFocus>
        <textureNoFocus>dialog_button_nofocus.png</textureNoFocus>
        <textXOff>-20</textXOff>
        <textXOff2>450</textXOff2>
        <textXOff3>1</textXOff3>
        <IconXOff>1400</IconXOff>

        <!-- group headers -->
        <textcolor3>ff148489</textcolor3>
        <!-- unwatched movies -->
        <textcolor>ffffffff</textcolor>
        <!-- watched movies -->
        <playedColor>ff444444</playedColor>
        <!-- offline movies -->
        <remoteColor>ff880000</remoteColor>
      </control>
      <control>
        <description>Thumbnail Panel</description>
        <type>thumbnailpanel</type>
        <id>50</id>
        <posX>40</posX>
        <posY>90</posY>
        <onright>5</onright>
        <width>690</width>
        <height>375</height>
        <spinPosX>#spin.xposition</spinPosX>
        <spinPosY>#spin.yposition</spinPosY>
        <spinWidth>#spin.width</spinWidth>
        <spinHeight>#spin.height</spinHeight>
        <spinAlign>left</spinAlign>
        <textureUp>MovingPictures\page_up_nofocus.png</textureUp>
        <textureDown>MovingPictures\page_down_nofocus.png</textureDown>
        <textureUpFocus>MovingPictures\page_up_focus.png</textureUpFocus>
        <textureDownFocus>MovingPictures\page_down_focus.png</textureDownFocus>
        <itemWidth>77</itemWidth>
        <itemHeight>115</itemHeight>
        <textureWidth>72</textureWidth>
        <textureHeight>100</textureHeight>
        <thumbWidth>75</thumbWidth>
        <thumbHeight>113</thumbHeight>
        <thumbPosX>0</thumbPosX>
        <thumbPosY>0</thumbPosY>
        <imageFolder>movie_preview_thumb_background_nofocus.png</imageFolder>
        <imageFolderFocus>MovingPictures\dvd_frame.png</imageFolderFocus>
        <suffix>|</suffix>
        <textureWidthBig>115</textureWidthBig>
        <textureHeightBig>175</textureHeightBig>
        <itemWidthBig>120</itemWidthBig>
        <itemHeightBig>180</itemHeightBig>
        <thumbWidthBig>115</thumbWidthBig>
        <thumbHeightBig>175</thumbHeightBig>
        <thumbPosXBig>0</thumbPosXBig>
        <thumbPosYBig>0</thumbPosYBig>
        <thumbZoom>yes</thumbZoom>
        <enableFocusZoom>no</enableFocusZoom>
        <unfocusedAlpha>150</unfocusedAlpha>
        <textXOff>1400</textXOff>
      </control>
      <control>
        <description>Filmstrip view</description>
        <type>filmstrip</type>
        <id>50</id>
        <posX>30</posX>
        <posY>280</posY>
        <onup>5</onup>
        <width>700</width>
        <scrollOffset>1</scrollOffset>
        <spinPosX>#spin.xposition</spinPosX>
        <spinPosY>550</spinPosY>
        <spinWidth>#spin.width</spinWidth>
        <spinHeight>#spin.height</spinHeight>
        <spinAlign>left</spinAlign>
        <itemWidth>150</itemWidth>
        <itemHeight>230</itemHeight>
        <textureWidth>150</textureWidth>
        <textureHeight>230</textureHeight>
        <thumbWidth>141</thumbWidth>
        <thumbHeight>221</thumbHeight>
        <thumbPosX>4</thumbPosX>
        <thumbPosY>4</thumbPosY>
        <textureUp>MovingPictures\page_up_nofocus.png</textureUp>
        <textureDown>MovingPictures\page_down_nofocus.png</textureDown>
        <textureUpFocus>MovingPictures\page_up_focus.png</textureUpFocus>
        <textureDownFocus>MovingPictures\page_down_focus.png</textureDownFocus>
        <thumbs flipY="false" diffuse="Thumb_Mask.png">unfocus</thumbs>
        <InfoImage flipY="false" diffuse="Thumb_Mask.png"></InfoImage>
        <imageFolder>MovingPictures\dvd_frame.png</imageFolder>
        <imageFolderFocus>MovingPictures\dvd_frame.png</imageFolderFocus>
        <frame>MovingPictures\dvd_frame.png</frame>
        <frameFocus>MovingPictures\dvd_frame.png</frameFocus>				
        <showFrame>yes</showFrame>
        <showFolder>yes</showFolder>
        <showBackGround>no</showBackGround>
        <showInfoImage>no</showInfoImage>
        <thumbAnimation effect="zoom" start="100,100" end="140,140" time="100">focus</thumbAnimation>
        <thumbAnimation effect="zoom" start="140,140" end="100,100" time="100"></thumbAnimation>
        <enableFocusZoom>no</enableFocusZoom>
        <textXOff>1400</textXOff>		
      </control>			
    </control>
  </controls>
</window>