<?xml version="1.0" encoding="utf-8"?>
<!-- 
This file should contain the facade view and all gui
elements that should remain on screen during all or
multiple view modes. 
-->
<window>
  <id>96742</id>
  <defaultcontrol>50</defaultcontrol>
  <allowoverlay>yes</allowoverlay>
  <!-- 
  This set of defines are read by the plug-in and used to determine aspects of it's behavior. These
  are parameters to give the skinner a tiny bit more control over the presentation.
  -->
  
  <define>#largeicons.available:false</define>     <!-- true if this skin implements the largeicons view -->
  <define>#largeicons.backdrop.used:true</define>  <!-- true if backdrop (fanart) should be displayed in this view -->
  
  <define>#smallicons.available:false</define>     <!-- Set to true if this skin implements the smallicons view -->
  <define>#smallicons.backdrop.used:true</define>  <!-- true if backdrop (fanart) should be displayed in this view -->
  
  <define>#list.available:true</define>            <!-- Set to true if this skin implements the list view -->
  <define>#list.backdrop.used:true</define>        <!-- true if backdrop (fanart) should be displayed in this view -->
  
  <define>#filmstrip.available:false</define>      <!-- Set to true if this skin implements the filmstrip view -->
  <define>#filmstrip.backdrop.used:true</define>   <!-- true if backdrop (fanart) should be displayed in this view -->
  
  <define>#smalltitle.color:ff383838</define>
  <define>#labelvalue.color:ff000000</define>
  <controls>
    <control>
      <description>Movie Backdrop (Fan Art) - Plug-in sets to invisible, if no art.</description>
      <type>image</type>
      <id>1</id>
      <posX>0</posX>
      <posY>0</posY>
      <width>1366</width>
      <height>768</height>
      <texture>#MovingPictures.Backdrop</texture>
    </control>
    <control>
      <description>Background to be displayed when there is no Movie Backdrop</description>
      <type>image</type>
      <id>0</id>
      <posX>0</posX>
      <posY>0</posY>
      <width>1366</width>
      <height>768</height>
      <texture>background.png</texture>
      <visible>!Control.IsVisible(1)</visible>
    </control>
    <control>
      <description>Cover Art</description>
      <type>image</type>
      <id>60</id>
      <posX>500</posX>
      <posY>20</posY>
      <width>400</width>
      <height>566</height>
      <texture>#MovingPictures.Coverart</texture>
      <visible>!Control.IsVisible(1)+Control.IsVisible(50)</visible>
    </control>
    <control>
      <description>Top overlay</description>
      <type>image</type>
      <id>0</id>
      <posX>0</posX>
      <posY>0</posY>
      <width>1366</width>
      <height>300</height>
      <texture>overlay_top.png</texture>
      <visible>Control.IsVisible(50)</visible>
    </control>
    <control>
      <type>image</type>
      <id>0</id>
      <posX>133</posX>
      <posY>120</posY>
      <width>1100</width>
      <height>1</height>
      <texture>hbar1white.png</texture>
      <visible>Control.IsVisible(50)</visible>
    </control>
    <control>
      <description>Movie Title</description>
      <type>label</type>
      <id>0</id>
      <posX>0</posX>
      <posY>40</posY>
      <width>1366</width>
      <font>font18</font>
      <label>#MovingPictures.SelectedMovie.title</label>
      <align>center</align>
      <textcolor>ffffff</textcolor>
      <visible>Control.IsVisible(50)</visible>
    </control>
    <control>
      <description>Tagline</description>
      <type>label</type>
      <id>0</id>
      <posX>0</posX>
      <posY>100</posY>
      <width>1366</width>
      <textcolor>ffffff</textcolor>
      <font>font14</font>
      <label>#MovingPictures.SelectedMovie.tagline</label>
      <align>center</align>
      <visible>Control.IsVisible(50)</visible>
    </control>
    <control>
      <type>imagelist</type>
      <id>101</id>
      <posX>580</posX>
      <posY>60</posY>
      <width>310</width>
      <height>30</height>
      <textureWidth>30</textureWidth>
      <textureHeight>30</textureHeight>
      <subitems>
        <subitem>greystar.png</subitem>
        <subitem>starbest.png</subitem>
      </subitems>
      <orientation>horizontal</orientation>
      <align>left</align>
      <imagesToDraw>10</imagesToDraw>
      <visible>Control.IsVisible(50)</visible>
      <percentage>#MovingPictures.SelectedMovie.score</percentage>
    </control>
    <control>
      <description>Cycle View Button</description>
      <type>button</type>
      <id>2</id>
      <onleft>50</onleft>
      <posX>1280</posX>
      <posY>150</posY>
      <width>81</width>
      <height>81</height>
      <textureFocus>moving_pictures_view_focus.png</textureFocus>
      <textureNoFocus>moving_pictures_view.png</textureNoFocus>
      <visible>Control.IsVisible(50)</visible>
    </control>
    <!-- This is an alternate view button that brings up a menu for view 
         selection, rather than just cycling the view. You can use both
         if you want to. -->
    <!--control>
      <description>View Menu Button</description>
      <type>button</type>
      <id>3</id>
      <onright>50</onright>
      <posX>0</posX>
      <posY>0</posY>
      <width>81</width>
      <height>81</height>
      <textureFocus>moving_pictures_view_focus.png</textureFocus>
      <textureNoFocus>moving_pictures_view.png</textureNoFocus>
      <visible>Control.IsVisible(50)</visible>
    </control-->
    <control>
      <description>Filters Button</description>
      <type>button</type>
      <id>4</id>
      <onleft>50</onleft>
      <posX>1280</posX>
      <posY>232</posY>
      <width>81</width>
      <height>81</height>
      <textureFocus>moving_pictures_filter_focus.png</textureFocus>
      <textureNoFocus>moving_pictures_filter.png</textureNoFocus>
      <visible>Control.IsVisible(50)</visible>
    </control>
    <control>
      <description>Settings Button - Not sure what this will do...</description>
      <type>button</type>
      <id>5</id>
      <onleft>50</onleft>
      <posX>1280</posX>
      <posY>313</posY>
      <width>81</width>
      <height>81</height>
      <textureFocus>moving_pictures_settings_focus.png</textureFocus>
      <textureNoFocus>moving_pictures_settings.png</textureNoFocus>
      <visible>Control.IsVisible(50)</visible>
    </control>
    <!--Imported Facades-->
    <import>movingpictures.details.xml</import>
    <import>movingpictures.filmstrip.xml</import>
    <import>movingpictures.largeicons.xml</import>
    <import>movingpictures.list.xml</import>
    <import>movingpictures.smallicons.xml</import>
    <control>
      <description>composite control consisting of a list control and a thumbnail panel</description>
      <type>facadeview</type>
      <id>50</id>
      <control>
        <description>Movie List</description>
        <type>listcontrol</type>
        <id>50</id>
        <posX>10</posX>
        <posY>125</posY>
        <onright>2</onright>
        <width>400</width>
        <height>500</height>
        <spinPosX>1300</spinPosX>
        <spinPosY>720</spinPosY>
        <textureFocus>menu_focus.png</textureFocus>
        <textureNoFocus>dialog_button_nofocus.png</textureNoFocus>
        <textXOff>-20</textXOff>
        <textXOff2>510</textXOff2>
        <IconXOff>1980</IconXOff>
        <textcolor>ffffff</textcolor>
      </control>
      <control>
        <description>Thumbnail Panel</description>
        <type>thumbnailpanel</type>
        <id>50</id>
        <onright>2</onright>
        <posX>82</posX>
        <posY>20</posY>
        <width>400</width>
        <height>748</height>
        <spinPosY>623</spinPosY>
        <spinPosX>380</spinPosX>
        <spinColor>ffcccccc</spinColor>
        <textureUp>page_up_nofocus.png</textureUp>
        <textureDown>page_down_nofocus.png</textureDown>
        <textureUpFocus>page_up_focus.png</textureUpFocus>
        <textureDownFocus>page_down_focus.png</textureDownFocus>
        <itemWidth>76</itemWidth>
        <itemHeight>103</itemHeight>
        <textureWidth>76</textureWidth>
        <textureHeight>103</textureHeight>
        <thumbWidth>76</thumbWidth>
        <thumbHeight>103</thumbHeight>
        <thumbPosX>0</thumbPosX>
        <thumbPosY>0</thumbPosY>
        <!--imageFolder>movie_preview_thumb_background_nofocus.png</imageFolder>
        <imageFolderFocus>movie_preview_thumb_background_focus.png</imageFolderFocus-->
        <font>font12</font>
        <suffix>|</suffix>
        <textureWidthBig>152</textureWidthBig>
        <textureHeightBig>205</textureHeightBig>
        <itemWidthBig>152</itemWidthBig>
        <itemHeightBig>205</itemHeightBig>
        <thumbWidthBig>152</thumbWidthBig>
        <thumbHeightBig>205</thumbHeightBig>
        <thumbPosXBig>0</thumbPosXBig>
        <thumbPosYBig>0</thumbPosYBig>
        <thumbZoom>no</thumbZoom>
        <enableFocusZoom>no</enableFocusZoom>
        <unfocusedAlpha>150</unfocusedAlpha>
      </control>
      <control>
        <description>Filmstrip view</description>
        <type>filmstrip</type>
        <id>50</id>
        <posX>34</posX>
        <posY>450</posY>
        <width>1300</width>
        <scrollOffset>4</scrollOffset>
        <onright>2</onright>
        <onup>2</onup>
        <spinPosY>623</spinPosY>
        <spinPosX>380</spinPosX>
        <spinWidth>24</spinWidth>
        <spinHeight>24</spinHeight>
        <spinColor>ffcccccc</spinColor>
        <itemWidth>185</itemWidth>
        <itemHeight>205</itemHeight>
        <textureWidth>220</textureWidth>
        <textureHeight>290</textureHeight>
        <thumbWidth>170</thumbWidth>
        <thumbHeight>230</thumbHeight>
        <thumbPosX>20</thumbPosX>
        <thumbPosY>20</thumbPosY>
        <thumbs flipY="false" diffuse="Thumb_Mask.png">unfocus</thumbs>
        <InfoImage flipY="false" diffuse="Thumb_Mask.png"></InfoImage>
        <imageFolderFocus>dvd_frame.png</imageFolderFocus>
        <frame>video_filmstrip_frame.png</frame>
        <frameFocus>dvd_frame.png</frameFocus>
        <background>Coverbig.png</background>
        <showFrame>no</showFrame>
        <showFolder>no</showFolder>
        <showBackGround>no</showBackGround>
        <showInfoImage>no</showInfoImage>
        <thumbAnimation effect="zoom" start="100,100" end="130,130" time="100">focus</thumbAnimation>
        <thumbAnimation effect="zoom" start="130,130" end="100,100" time="100"></thumbAnimation>
      </control>
    </control>
  </controls>
</window>